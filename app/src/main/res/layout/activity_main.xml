<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.TipCalculator.MainActivity">

    <EditText
        android:id="@+id/billEditText"
        android:layout_width="399dp"
        android:layout_height="57dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:hint="Enter Bill Amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fifteenButton"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:text="15%"
        app:layout_constraintStart_toStartOf="@+id/billEditText"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/eighteenButton"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="130dp"
        android:text="18%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/twentyButton"
        android:layout_width="95dp"
        android:layout_height="54dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="112dp"
        android:text="20%"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/twentyButton" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="186dp"
        android:layout_height="28dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:text="Tip: $99.99, Total Bill: $99.99."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>